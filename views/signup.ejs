<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Form creator</title>
        <style>
        @import url('https://fonts.googleapis.com/css?family=Assistant&display=swap');
        body {
            background: gray;
            margin: 15px;
            margin-top: 50px;
        }
        .login-form,
        .login-form * {
            box-sizing: border-box;
            font-family: 'Assistant';
        }
        .login-form {
            max-width: 350px;
            margin: 0 auto;
            border-radius: 5px;
            overflow: hidden;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.15);
        }
        .login-form__logo {
            display: block;
            max-width: 125px;
            margin: 0 auto;
        }
        .login-form__content {
            padding: 30px;
            background: #eeeeee;
        }
        .login-form__header {
            margin-bottom: 15px;
            text-align: center;
            color: #333333;
        }
        .login-form__input {
            width: 100%;
            margin-bottom: 10px;
            padding: 10px;
            border-radius: 5px;
            border: 2px solid #dddddd;
            background: #ffffff;
            outline: none;
            transition: border-color 0.5s;
        }
        .login-form__input::placeholder {
            color: #aaaaaa;
        }
        .login-form__button {
            padding: 10px;
            color: #ffffff;
            font-weight: bold;
            background:  rgb(0, 102, 255);
            width: 100%;
            border: none;
            outline: none;
            border-radius: 5px;
            cursor: pointer;
        }
        .login-form__button:hover {
            background-color: darkcyan;
        }
        .login-form__links {
            margin-top: 15px;
            text-align: center;
        }
        .login-form__link {
            font-size: 0.9em;
            color: #008067;
            text-decoration: none;
        }
            .flash-message {
                    margin-left:200px;
                    font-size: 24px;
                    margin-bottom: 20px;
                    background-color:rgb(237, 134, 132);
                    color:white;
                    text-align: center;
                    border-radius:5px;
                    widows: 300px;
                }
        </style>
    </head>
    <body>
        <div class = "flash-message" role = "alert">
            <%= message %>
        </div>
        <div class="login-form__logo-container">
            <form class="login-form" action="/signup" method="POST">
                <div class="login-form__content">
                    <div class="login-form__header">Register</div>
                    <div id = "userStatus" style = "margin-left:10px;font-size: 12px" > 
                    
                    </div> 
                    <input class="login-form__input" type="text" name="username" onkeyup="onUsernameEnter()" placeholder="Username">
                    <input class="login-form__input" type="password" name="password" placeholder="Password">
                    <button class="login-form__button" type="submit">Register</button>
                </div>
            </form>
        </div>
        <div class="dynamic-username" style="display: none;"> 
            <%= JSON.stringify(users) %>
        </div>
    </body>
    <script>
        var input = document.getElementsByClassName('login-form__input');
        console.log(input);
        var message = document.getElementById('userStatus');
        console.log(message);
        var usersArray = document.getElementsByClassName("dynamic-username").textContent;
        console.log(usersArray);
        var arr = JSON.parse(usersArray);
        
        function onUsernameEnter()
        {   
            var flag = 0;
            for(var i = 0;i < arr.length;i++)
            {
                if(arr[i] == input.value)
                {
                    flag = 1;
                    break;
                } 
            }
                                                         
            if(flag == 0 && input.value != "")
            message.textContent = "Username not taken";
            
            else if(flag == 1)
            message.textContent = "Username taken"; 
            
            else if(input.value == "")
            message.textContent = "" 
            
        }
    </script>
</html>